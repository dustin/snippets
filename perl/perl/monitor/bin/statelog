#!/usr/bin/perl
#
# $Id: statelog,v 1.1 1997/12/12 18:36:31 dustin Exp $
#
# Log disk utilization

push(@INC, "/home/monitor/lib");
require 'statlib.pl';

$timestamp="";
$datestamp="";

sub storeline
{
    my($line)=@_;
    my($pathname, $n, @a);

    @a=split(/;/, $line);
    $pathname="$statelogs/$datestamp/$a[0]";
    &ensurepath($pathname);

    open(LOG, ">>$pathname");

    print LOG $line;

    close(LOG);
}

($timestamp, $datestamp)=&timeStamps;

open(IN, "/home/barbershop/cgi-bin/stats/getstats.cgi log|");
while(<IN>)
{
    storeline($_);
}
close(IN);
